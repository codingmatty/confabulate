{
  "name": "confabulate",
  "version": "0.1.0",
  "description": "A contact manager to help you increase engagement with your friends",
  "license": "GPL-3.0",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "dev": "nodemon --watch server server",
    "lint": "eslint client server",
    "lint:fix": "eslint --fix client server",
    "build": "NODE_ENV=production next build client",
    "prestart": "npm run migrate:up",
    "start:dev": "docker-compose up",
    "start": "node server",
    "migrate": "migrate --store ./db-manage/store --migrations-dir ./db-manage/migrations",
    "migrate:list": "npm run migrate -- list",
    "migrate:up": "npm run migrate -- up",
    "migrate:down": "npm run migrate -- down",
    "migrate:create": "migrate --migrations-dir ./db-manage/migrations -t ./db-manage/template.js create",
    "cron": "NODE_ENV=production node scripts/execute-cron.js",
    "update-env-vars": "heroku config:push -o -f .production.env"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "apollo-boost": "^0.3.1",
    "apollo-server-express": "^2.4.8",
    "body-parser": "^1.18.3",
    "connect-mongo": "^2.0.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.16.0",
    "firebase": "^5.9.3",
    "firebase-admin": "^7.2.0",
    "flat": "^4.1.0",
    "googleapis": "^39.2.0",
    "graphql": "^14.2.1",
    "handlebars": "^4.1.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.11",
    "md5-o-matic": "^0.1.1",
    "migrate": "^1.6.2",
    "mjml": "^4.4.0-beta.1",
    "moment": "^2.24.0",
    "mongoose": "^5.5.0",
    "morgan": "^1.9.1",
    "next": "^8.0.4",
    "nprogress": "^0.2.0",
    "passport": "^0.4.0",
    "passport-custom": "^1.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-apollo": "^2.5.4",
    "react-apollo-hooks": "^0.4.5",
    "react-dom": "^16.8.6",
    "react-modal": "^3.8.1",
    "react-swipeable": "^5.1.0",
    "styled-components": "^4.2.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "apollo-server-testing": "^2.4.8",
    "babel-eslint": "^10.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.5",
    "lowdb": "^1.0.0",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react-testing-library": "^6.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{client,server}/*.{js,jsx,json,md}": [
      "eslint --fix",
      "git add"
    ]
  }
}
